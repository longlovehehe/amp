{strip}<h2 class="title">{"新增设备"|L}</h2><form id="form" class="base mrbt10" action="?modules=device&action=mds_save">    <input type="hidden" name="d_id" value="{$data.d_id}">    <div class="block">        <div class="radioset none" id="radioset" value="{$data.d_type}">            <input autocomplete="off"  value="mds" type="radio" id="radio_mds" name="d_type"  checked="checked" /><label for="radio_mds">{$smarty.session.ident}-Server</label>            <input autocomplete="off"  value="vcr" type="radio" id="radio_vcr" name="d_type" /><label for="radio_vcr">VCR</label>            <input autocomplete="off"  value="vcrs" type="radio" id="radio_vcrs" name="d_type" /><label for="radio_vcrs">VCR-S</label>        </div>    </div>    <div class="block">        <label class="title">{"设备名称"|L}：</label>        <input chinese="true" autocomplete="off" value="{$data.d_name}"  maxlength="32" name="d_name" type="text" required="true" />    </div>    <div class="block">        <label class="title">{"网络接入方式"|L}：</label>        <select name="d_network_type">            <option value="0" {if $data.d_network_type eq 0}selected{/if}>{"非端口映射"|L}</option>            <option value="1" {if $data.d_network_type eq 1}selected{/if}>{"端口映射"|L}</option>        </select>    </div>    <div class="Upnp none">        <div class="block">            <label class="title">{"映射地址"|L}：</label>            <input autocomplete="off"   maxlength="32" value="{$data.d_ip2}" name="d_ip2" type="text" required="true" ip="true" />        </div>        <div class="block">            <label class="title">{"映射端口"|L}：</label>            <input autocomplete="off"   maxlength="32" value="{$data.d_port2}" name="d_port2" type="text" required="true" digits ="true" range="[0,65535]" />        </div>    </div>    <div class="block">        <label class="title">{"设备地址"|L}：</label>        <input autocomplete="off"   maxlength="32" value="{$data.d_ip1}" name="d_ip1" type="text" required="true" ip="true" />    </div>    <div class="block">        <label class="title">{"设备端口"|L}：</label>        <input autocomplete="off"   maxlength="32" value="{$data.d_port1}" name="d_port1" type="text" required="true" digits ="true" range="[0,65535]" />    </div>    <div class="block">        <label class="title">{"区域"|L}：</label>        <select value='{$data.d_area}' name="d_area[]" multiple="true" class="autofix autoeditselect" action="?m=area&a=option" selected="true">            {"<option value='#'>{'全部'|L}</option>"|isallarea}        </select>    </div>    <p class="info_text">{"在选择区域时，可单击单选，按住ctrl多选或按住shift连续选择多项"|L}</p>    <div class="buttons mrtop40">        <a goto="?m=device&a=index" form="form" class="ajaxpost button normal">{"保存"|L}</a>        <a class="goback button">{"取消"|L}</a>    </div></form>{/strip}